@import "base"

/* Tao button */
.btn
  position: fixed
  left: 16px
  bottom: 13px
  z-index: 3
  width: 46px
  height: 46px
  line-height: 38px
  text-align: center
  cursor: pointer;
  border: 3px solid #f9f9f9
  border-radius: 50%
  background-color: #ff4400
  background: linear-gradient(#ff5400, #ff4400)
  box-shadow: 0 0 3px rgba(0,0,0,.3)

  &.on
    background: rgba(204,204,204,.7)

  span
    display: inline-block
    font-size: 25px
    color: #fff


/* Taoplus */
.taoplus
  position: fixed
  left: 32px
  bottom: 40px
  z-index: 2
  opacity: 0
  width: 195px
  height: 195px
  overflow: hidden
  border: 5px solid rgba(51,51,51,.1)
  border-radius: 50%
  pointer-events: none
  transform-origin: -10px 210px
  transform: scale(.1)
  transition: all .3s

  &.on
    visibility: visible
    opacity: 1
    pointer-events: auto
    transform: scale(1)

  a
    display: block
    text-decoration: none
    color: #c3c3c3

  li
    position: absolute
    left: 50%
    top: 50%
    z-index: 3
    margin-left: -130px
    margin-top: -130px
    width: 130px
    height: 130px
    overflow: hidden
    border-bottom: 1px solid #f3f3f3
    border-right: 2px solid #fff
    background-color: #f6f6f6
    transform-origin: 100% 100%

    &:nth-child(1)
      transform: rotate(-30deg) skew(30deg)
    &:nth-child(2)
      transform: rotate(30deg) skew(30deg)
    &:nth-child(3)
      transform: rotate(90deg) skew(30deg)
    &:nth-child(4)
      transform: rotate(150deg) skew(30deg)
    &:nth-child(5)
      transform: rotate(210deg) skew(30deg)
    &:nth-child(6)
      transform: rotate(270deg) skew(30deg)

  .nav a
    position: absolute
    right: -90px
    bottom: -90px
    z-index: 3
    width: 185px
    height: 185px
    text-align: center
    padding-top: 15px
    background: linear-gradient(#fff, #ccc)
    transform: skew(-30deg) rotate(-60deg) scale(1)

    &:hover
      background: #ff4400

  .nav span
    display: inline-block
    font-size: 26px
    color: #afafaf
    mask: linear-gradient(rgba(175,175,175,1), rgba(175,175,175,.7))

  li:nth-child(1) span
    transform: rotate(90deg)
  li:nth-child(2) span
    transform: rotate(30deg)
  li:nth-child(3) span
    transform: rotate(-30deg)
  li:nth-child(4) span
    transform: rotate(-90deg)
  li:nth-child(5) span
    transform: rotate(-150deg)
  li:nth-child(6) span
    transform: rotate(-210deg)

  .nav a:hover span
    color: #fff
    mask: none

  .home
    position: absolute
    left: 50px
    bottom: 50px
    z-index: 3
    width: 88px
    height: 88px
    text-align: center
    border-radius: 50%
    background: linear-gradient(#e6e4e4, #fff)

    a
      position: absolute
      left: 50%
      bottom: 50%
      z-index: 4
      width: 78px
      height: 78px
      line-height: 74px
      margin-left: -39px
      margin-bottom: -38px
      border-radius: 50%
      box-shadow: 0 1px 1px rgba(51,51,51,.3)
      background: linear-gradient(#fcfdfd, #eeefef)

      &:hover
        background: #ff4400

    span
      font-size: 36px
      mask: linear-gradient(rgba(154,154,154,.6), rgba(195,195,195,.3))

    a:hover span
      color: #fff
      mask: none


/* Overlay */
.overlay
  visibility: hidden
  width: 100%
  height: 100%
  position: fixed
  left: 0
  top: 0
  opacity: 0
  right: 0
  bottom: 0
  z-index: 1
  background-color: rgba(0,0,0,.2)
  transition: opacity .3s ease

  &.on
    visibility: visible
    opacity: 1


